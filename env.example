# ===========================================
# HireSight Environment Configuration
# ===========================================

# ===========================================
# Database Configuration (TiDB Cloud)
# ===========================================
DATABASE_URL="mysql://username:password@host:port/database?sslaccept=strict"
TIDB_CLOUD_HOST="your-cluster.tidbcloud.com"
TIDB_CLOUD_PORT="4000"
TIDB_CLOUD_USER="your-username"
TIDB_CLOUD_PASSWORD="your-password"
TIDB_CLOUD_DATABASE="hiresight"

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"

# ===========================================
# Azure Blob Storage
# ===========================================
AZURE_STORAGE_ACCOUNT_NAME="your-storage-account"
AZURE_STORAGE_ACCOUNT_KEY="your-storage-key"
AZURE_STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;EndpointSuffix=core.windows.net"
AZURE_STORAGE_CONTAINER_CVS="cvs"
AZURE_STORAGE_CONTAINER_AUDIO="audio"
AZURE_STORAGE_CONTAINER_INDEXES="indexes"

# ===========================================
# AI Services Configuration
# ===========================================
# BlackBox AI (Primary)
BLACKBOX_API_KEY="your-blackbox-api-key"
BLACKBOX_BASE_URL="https://api.blackbox.ai"
BLACKBOX_MODEL="o4-mini-high"

# Moonshot AI (Fallback)
MOONSHOT_API_KEY="your-moonshot-api-key"
MOONSHOT_BASE_URL="https://api.moonshot.cn"
MOONSHOT_MODEL="kimi-k2"

# OpenAI (Embeddings)
OPENAI_API_KEY="your-openai-api-key"
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"
OPENAI_EMBEDDING_DIMENSIONS="1536"

# ===========================================
# Authentication & Security
# ===========================================
JWT_SECRET="your-super-secret-jwt-key"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"
BCRYPT_ROUNDS="12"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"
CORS_CREDENTIALS="true"

# ===========================================
# External API Integrations
# ===========================================
# LinkedIn API (BrightData)
LINKEDIN_API_KEY="your-brightdata-api-key"
LINKEDIN_API_URL="https://api.brightdata.com"

# GitHub API
GITHUB_API_TOKEN="your-github-token"
GITHUB_API_URL="https://api.github.com"

# ElevenLabs (Speech-to-Text)
ELEVENLABS_API_KEY="your-elevenlabs-api-key"
ELEVENLABS_BASE_URL="https://api.elevenlabs.io"
ELEVENLABS_MODEL="whisper-large-v3"

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV="development"
PORT="3001"
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:3001"

# File Upload Limits
MAX_FILE_SIZE="10MB"
ALLOWED_FILE_TYPES="pdf,doc,docx,txt"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# ===========================================
# Worker Configuration
# ===========================================
# Ingest Worker
INGEST_WORKER_CONCURRENCY="5"
INGEST_WORKER_DELAY="1000"

# ANN Worker
ANN_WORKER_HOST="localhost"
ANN_WORKER_PORT="8000"
ANN_INDEX_DIMENSION="1536"
ANN_INDEX_M="16"
ANN_INDEX_EF_CONSTRUCTION="200"
ANN_INDEX_EF="50"

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL="info"
LOG_FORMAT="json"
LOG_FILE="logs/app.log"

# ===========================================
# Monitoring & Analytics
# ===========================================
# Sentry (Error Tracking)
SENTRY_DSN="your-sentry-dsn"

# Prometheus (Metrics)
PROMETHEUS_PORT="9090"

# ===========================================
# Development & Testing
# ===========================================
# Test Database
TEST_DATABASE_URL="mysql://test-user:test-password@localhost:3306/hiresight_test"

# Mock Services (for development)
MOCK_LINKEDIN_API="false"
MOCK_GITHUB_API="false"
MOCK_AI_SERVICES="false"

# ===========================================
# Deployment Configuration
# ===========================================
# Render
RENDER_SERVICE_ID="your-render-service-id"
RENDER_API_KEY="your-render-api-key"

# Health Check
HEALTH_CHECK_INTERVAL="30000"
HEALTH_CHECK_TIMEOUT="5000"

# ===========================================
# Feature Flags
# ===========================================
ENABLE_LIVE_INTERVIEW="true"
ENABLE_SEMANTIC_SEARCH="true"
ENABLE_REFERENCE_CALLS="false"
ENABLE_ATS_INTEGRATION="true"
ENABLE_ANALYTICS="true"
